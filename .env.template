# API Keys for AI Ethics Research Project
# Copy this file to .env and fill in your actual API keys

# OpenAI API key for ChatGPT access
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4.1-mini

# Google Gemini API key
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-pro

# Anthropic Claude API key
# Get from: https://console.anthropic.com/
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-opus-20240229

# GROK API key
# Get from: https://grok.x.ai/
GROK_API_KEY=your-grok-api-key
GROK_MODEL=grok-3-mini

# Flask application configuration (for webapp)
FLASK_SECRET_KEY=your-secret-key-here
FLASK_DEBUG=True
PORT=5005

# Database configuration
# Choose database type: "sqlite" or "supabase"
DB_TYPE=sqlite

# SQLite configuration (used when DB_TYPE=sqlite)
DB_PATH=data/results.db

# Supabase PostgreSQL configuration (used when DB_TYPE=supabase)
# Get these values from your Supabase project settings > Database > Connection Info
SUPABASE_DB_NAME=postgres
SUPABASE_USER=postgres.your-project-id
SUPABASE_PASSWORD=your-database-password
SUPABASE_HOST=aws-0-us-east-2.pooler.supabase.com
SUPABASE_PORT=6543
